<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxvarosok.UpdateController"
      spacing="20" alignment="CENTER">
    <!-- Városok módosítása -->
    <TitledPane text="Városok módosítása" expanded="false">
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10">
                <Label text="ID:"/>
                <TextField fx:id="cityIdField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Név:"/>
                <TextField fx:id="cityNameField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Megye ID:"/>
                <TextField fx:id="cityCountyIdField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Megyeszékhely?" />
                <CheckBox fx:id="cityCountySeatBox"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Megyei jogú?" />
                <CheckBox fx:id="cityCountyAuthorityBox"/>
            </HBox>
            <Button text="Módosítás" fx:id="updateCityButton"/>
        </VBox>
    </TitledPane>

    <!-- Megyék módosítása -->
    <TitledPane text="Megyék módosítása" expanded="false">
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10">
                <Label text="ID:"/>
                <TextField fx:id="countyIdField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Név:"/>
                <TextField fx:id="countyNameField"/>
            </HBox>
            <Button text="Módosítás" fx:id="updateCountyButton"/>
        </VBox>
    </TitledPane>

    <!-- Lélekszám módosítása -->
    <TitledPane text="Lélekszám módosítása" expanded="false">
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10">
                <Label text="Város ID:"/>
                <TextField fx:id="populationCityIdField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Év:"/>
                <TextField fx:id="populationYearField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Nők száma:"/>
                <TextField fx:id="populationFemaleField"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Összesen:"/>
                <TextField fx:id="populationTotalField"/>
            </HBox>
            <Button text="Módosítás" fx:id="updatePopulationButton"/>
        </VBox>
    </TitledPane>
</VBox>

